<div class="info">
    <%= form_for [current_user, recipe], :html=> {:id => 'recipe_form'} do |f| %>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%=f.label :name %><br>
            <%=f.text_field :name, placeholder: "Recipe Name", class: "form-control-lg" %>
          </div>
          <div class="form-group col-md-6">
            <%=f.label :description %><br>
            <%=f.text_field :description, placeholder: "Description", class: "form-control-lg" %>
          </div>
        </div>
        <div class="form-group">
           <%=f.label :instructions %><br>
           <%=f.text_area :instructions, placeholder: "Instructions", class: "form-control-lg", rows: "6", style: "height:100%; min-width: 100%" %>
        </div>

        <table style="width:100%">
          <thead>
            <tr>
              <th>Ingredient:</th>
              <th >Quantity:</th>
            </tr>
          </thead>
          <tbody id="fields">
            <%= f.fields_for :recipe_ingredients do |recipe_ingredient| %>
              <%= render 'recipe_ingredient', f: recipe_ingredient %>
            <% end %>
          </tbody>
        </table><br>

        <%= button_add_row('Add Ingredient', f, :recipe_ingredients, nested_association = :ingredient, class: 'btn btn-outline-primary btn-sm') %></br></br></br>
        <%= f.submit submit, class: 'btn btn-success btn-lg' %>
    <% end %>
</div>
